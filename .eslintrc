{
    "extends":                          "eslint:recommended",
    "parser":                           "babel-eslint",
    "parserOptions": {
        "ecmaVersion":                  2018,
        "sourceType":                   "module"
    },
    "rules": {
        "no-console":                   "off"
    },
    "env": {
        "browser":                      true,
        "amd":                          true
    },
    "globals": {
        "module":                       true,
        "Buffer":                       true,
        "Promise":                      true,
        "__dirname":                    true,
        "process":                      true
    }
}
